FROM zambon/golang-multi:1.7.6

RUN echo "deb http://ftp.us.debian.org/debian testing main contrib" >> /etc/apt/sources.list

RUN apt-get -q update && apt-get -qy install --no-install-recommends \
      curl \
      build-essential \
      libaio-dev \
      libcap-dev \
      libprotobuf-dev \
      libprotobuf-c0-dev \
      protobuf-c-compiler \
      protobuf-compiler \
      python-minimal \
      iptables \
      libseccomp2 \
      libseccomp-dev \
    && rm -rf /var/lib/apt/lists/*

# install criu
ENV CRIU_VERSION 1.7
ENV WERROR 0
RUN mkdir -p /usr/src/criu && \
    curl -sSL https://github.com/xemul/criu/archive/v${CRIU_VERSION}.tar.gz | \
      tar -v -C /usr/src/criu/ -xz --strip-components=1 && \
    cd /usr/src/criu && \
    make install-criu

# setup a playground for us to spawn containers in
RUN mkdir /busybox && \
	curl -sSL 'https://github.com/jpetazzo/docker-busybox/raw/buildroot-2014.11/rootfs.tar' | \
		tar -xC /busybox

COPY script/tmpmount /
WORKDIR /go/src/github.com/opencontainers/runc
ENTRYPOINT ["/tmpmount"]
